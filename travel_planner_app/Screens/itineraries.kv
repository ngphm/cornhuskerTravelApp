Screen:
    name: 'itineraries'
    current_location: 'Lincoln, Nebraska'
    days_into_journey: 0
    Header:
        title: 'Prepare Itinerary'
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                size_hint_y: .25
                Label:
                    text: f'Days into journey: {root.days_into_journey}'
                Label:
                    text: f'Current Location: {root.current_location}'
            Button:
                size_hint_y: .25
                text: 'Request Itinerary'
                on_press:
                    app.create_popup(app.request_itinerary(app.session,root.current_location,root.days_into_journey,lincoln_or_bust,the_scenic_route,lincoln_or_bust_button.down,the_scenic_route_button.down))
            BoxLayout:
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        size_hint_y: .25
                        text: 'Lincoln or Bust'
                    ScrollView:
                        size_hint_y: 2
                        ListHolder:
                            id: lincoln_or_bust
                    ToggleButton:
                        id: lincoln_or_bust_button
                        size_hint_y: .25
                        text: 'Select'
                        group: 'itinerary'
                BoxLayout:
                    orientation: 'vertical'
                    Label:
                        size_hint_y: .25
                        text: 'The scenic route'
                    ScrollView:
                        size_hint_y: 2
                        ListHolder:
                            id: the_scenic_route
                    ToggleButton:
                        id: the_scenic_route_button
                        size_hint_y: .25
                        text: 'Select'
                        group: 'itinerary'

