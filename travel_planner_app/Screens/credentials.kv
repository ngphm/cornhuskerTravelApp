Screen:
    name: 'credentials'
    Header:
        title: 'Travel App'
        back: True
        BoxLayout:
            orientation: 'vertical'
            BoxLayout:
                orientation: 'vertical'
                GridLayout:
                    cols: 2
                    rows: 8
                    row_force_default: True
                    row_default_height: 40
                    Label:
                        text: 'Authority: '
                    TextInput:
                        id: authority
                        text: 'cse.unl.edu'
                    Label:
                        text: 'Port Number: '
                    TextInput:
                        id: port
                        text: '3306'
                    Label:
                        text: 'Database Name: '
                    TextInput:
                        id: database
                        text: 'swoods'
                    Label:
                        text: 'User Name: '
                    TextInput:
                        id: username
                        text: 'swoods'
                    Label:
                        text: 'Password: '
                    TextInput:
                        id: password
                        password: True
                        text: ''
                    Label:
                        text: 'OpenWeather Authority: '
                        font_size: 13
                    TextInput:
                        id: ow_authority
                        text: 'api.openweathermap.org'
                    Label:
                        text: 'OpenWeather Port Number: '
                        font_size: 13
                    TextInput:
                        id: ow_port_number
                        text: '443'
                    Label:
                        text: 'OpenWeather API Key: '
                        font_size: 12.7
                    TextInput:
                        id: ow_api_key
                        text: ''
                Button:
                    id: create_airport
                    size_hint_y: .25
                    text: 'Submit'
                    on_press:
                        app.use_credentials(authority.text, port.text, database.text, username.text, password.text, ow_authority.text, ow_port_number.text, ow_api_key.text)
