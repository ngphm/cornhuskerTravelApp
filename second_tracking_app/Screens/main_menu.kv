Screen:
    name: 'main_menu'
    Header:
        title: 'Operator App'
        back : True
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please select an option.'
            BoxLayout:
                Widget:
                    size_hint_x: None
                    width: 60
                BoxLayout:
                    orientation: 'vertical'
                    Button:
                        text: 'New Airplane'
                        on_press:
                            app.root.transition.direction = 'left'
                            app.root.current = 'new_airplane'
                    Button:
                        text: 'New Airport'
                        on_press:
                            app.root.transition.direction = 'left'
                            app.root.current = 'new_airport'
                    Button:
                        text: 'Add/Edit Operator'
                        on_press:
                            app.root.transition.direction = 'left'
                            app.root.current = 'new_operator'
                    Button:
                        text: 'Submit Review'
                        on_press:
                            app.root.transition.direction = 'left'
                            app.root.current = 'submit_review'
                Widget:
                    size_hint_x: None
                    width: 60
            Widget:
