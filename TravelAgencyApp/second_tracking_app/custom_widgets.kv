<MultiSelectOption@ToggleButton>:
    size_hint: 1, None
    height: '48dp'

<ListItem@OneLineListItem>:
    text: ''
    height: 40
    bg_color: 'grey'
    on_release: self.on_pressed()

<TwoListItem@TwoLineListItem>:
    text: ''
    height: 40
    bg_color: 'grey'
    on_release: self.on_pressed()



<Header@BoxLayout>:
    title: 'Placeholder'
    back: False
    orientation: 'vertical'
    canvas.before:
        Color:
            rgba: 5,8,50,0.5
        Rectangle:
            pos: self.pos
            size: self.size
    BoxLayout:
        orientation: 'horizontal'
        size_hint: 1,0.1
        canvas.before:
            Color:
                rgba: 0.5, 0.7, 0.8, 0.5
            Rectangle:
                pos: self.pos
                size: self.size
        GridLayout:
            cols: 2
            Button:
                background_color: 0.5, 0.7, 1, 1
                size_hint_x: None
                width: 78
                text: 'Back'
                disabled:  root.back
                on_press:
                    app.root.transition.direction = 'right'
                    app.root.current = 'main_menu'
                    app.root.transition.direction = 'left'
            Label:
                text: root.title
                font_size: '25sp'
                color: 'white'

# All screens are white
<Screen>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos

<ScreenManager>:
    canvas.before:
        Color:
            rgba: (0, 0, 0, 1)
        Rectangle:
            size: self.size
            pos: self.pos

# All buttons are blue with white text
<Button>:
    background_color: 0.5, 0.7, 1, 1
    color: (1, 1, 1, 1)

<Label>:
    color: 'black'
    font_size: sp(15)

<TextInput>:
    multiline: False
    write_tab: False
