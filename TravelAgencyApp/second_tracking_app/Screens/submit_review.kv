#: import Operator database.Operator
Screen:
    name: 'submit_review'
    on_enter:
        app.create_popup(app.populate_spinner(app.session, Operator,operator_spinner))
    Header:
        title: 'Submit Review'
        BoxLayout:
            orientation: 'vertical'
            Widget:
            GridLayout:
                cols: 2
                rows: 2
                row_force_default: True
                row_default_height: 40
                Label:
                    text: 'Select:'
                Spinner:
                    id: operator_spinner
                    text: "Select"
                    background_color: 0.5, 0.7, 1, 1
                    pos_hint:{'center_x':1, 'top': 1}
                    values: ['Jake', 'Mike', 'Tom' ]
                Label:
                    text: 'Score'
                TextInput:
                    id: operator_score
                    input_filter: 'float'
            Widget:
            Button:
                size_hint_y: .25
                text: 'Submit'
                on_press:
                    app.create_popup(app.add_review(app.session, operator_spinner.text, operator_score.text))
