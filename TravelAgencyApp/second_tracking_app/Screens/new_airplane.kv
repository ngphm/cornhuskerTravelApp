#: import Airplane database.Airplane
Screen:
    name: 'new_airplane'
    on_leave:
        airplane_name.text = ''
        airplane_range.text = ''
    Header:
        title: 'New Airplane'
        BoxLayout:
            orientation: 'vertical'
            Widget:
            GridLayout:
                cols: 2
                rows: 2
                row_force_default: True
                row_default_height: 40
                Label:
                    text: 'Name'
                TextInput:
                    id: airplane_name
                Label:
                    text: 'Range'
                TextInput:
                    id: airplane_range
                    input_filter: 'float'
            Widget:
            Button:
                size_hint_y: .25
                text: 'Submit'
                on_press:
                    checks = {'name':airplane_name.text}
                    values = {'range':airplane_range.text}
                    app.create_popup(app.create_object(app.session,Airplane,checks,values))
                    app.create_popup(app.populate_spinner(app.session, Airplane, app.root.get_screen('new_operator').ids.airplane_spinner))

