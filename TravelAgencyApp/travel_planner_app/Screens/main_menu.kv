Screen:
    name: 'main_menu'
    to_validate: 0
    to_update: 0
    Header:
        title: 'Travel App'
        back: True
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please select an option.'
                color: 'black'
            BoxLayout:
                Widget:
                    size_hint_x: None
                    width: 60
                BoxLayout:
                    size_hint: (3,1)
                    orientation: 'vertical'
                    Button:
                        text: 'Advance calendar'
                        on_press:
                            app.advance_calendar()
                    Label:
                        text: f'Cities/Airports to be validated: {root.to_validate}'
                        color: 'black'
                        font_size: 10
                    Button:
                        text: 'Validate Locations'
                        on_press: app.root.current = 'validate_locations'
                    Label:
                        text: f"Operators'/Venues' rating to be updated: {root.to_update}"
                        color: 'black'
                        font_size: 10
                    Button:
                        text: 'Update Ratings'
                        on_press: app.root.current = 'update_ratings'
                    Widget:
                    Button:
                        text: 'Prepare Itinerary'
                        on_press: app.root.current = 'itineraries'
                    Widget:
                    Button:
                        text: 'Quit'
                        on_press: app.stop()


                Widget:
                    size_hint_x: None
                    width: 60
            Widget:
