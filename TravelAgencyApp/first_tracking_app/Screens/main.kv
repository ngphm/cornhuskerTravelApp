Screen:
    name: 'main_menu'
    Header:
        title: 'Airport Tracker'
        back: True
        BoxLayout:
            orientation: 'vertical'
            Label:
                text: 'Please select an option.'
                color: 'black'
            BoxLayout:
                Widget:
                    size_hint_x: None
                    width: 60
                BoxLayout:
                    size_hint: (3,1)
                    orientation: 'vertical'
                    Button:
                        text: 'New Airport'
                        on_press:
                            app.root.current='new_airport'
                    Button:
                        text: 'New City'
                        on_press:
                            app.root.current = 'new_city'
                    Button:
                        text: 'Check Forecast'
                        on_press:
                            app.root.current = 'check_forecast'
                Widget:
                    size_hint_x: None
                    width: 60
            Widget: